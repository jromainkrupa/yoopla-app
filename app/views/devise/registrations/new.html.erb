<div class="container">
  <%= link_to root_path do %>
    <i id="previous-chevron" class="fas fa-chevron-left"></i>
  <% end %>
  <div class="black-title">
    <h1>C'est parti</h1>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.input :first_name,
          input_html: { class: "field-input" },
          label: false,
          autofocus: true,
          required: true,
          placeholder: "Prénom" %>
   </div>
   <div class="field">
     <%= f.input :last_name,
          input_html: { class: "field-input" },
          label: false,
          autofocus: true,
          required: true,
          placeholder: "Nom" %>
   </div>
   <div class="field">
     <%= f.input :email,
          input_html: { class: "field-input" },
          autofocus: true,
          label: false,
          required: true,
          autocomplete: "email",
          placeholder: "Adresse e-mail" %>
   </div>

   <div class="field">
     <%= f.input :password,
          input_html: { class: "field-input" },
          label: false,
          required: true,
          autocomplete: "new-password",
          placeholder: "Mot de passe (6 caractères minimum)" %>
   </div>
   <div class="conditions">
     <p>En continuant, vous acceptez les <span>Conditions générales</span> et la <span>Politique de confidentialité</span> de Yoopla</p>
   </div>

   <div class="btn-container">
     <%= f.submit "C'est parti!", class:"btn-large btn-green" %>
   </div>
  <% end %>
  <div id="or">
    <p>OU</p>
  </div>

    <%- if devise_mapping.omniauthable? %>
    <div class="btn-container">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "S'inscrire avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn-fb-blue-up" %><br />
      <% end %>
    <% end %>
  </div>
</div>

