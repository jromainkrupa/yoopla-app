<div class="container">
  <%= link_to root_path do %>
    <i id="previous-chevron" class="fas fa-chevron-left"></i>
  <% end %>
  <div class="black-title">
    <h1>C'est parti</h1>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.input :first_name,
          input_html: { class: "field-input" },
          label: false,
          autofocus: true,
          required: true,
          placeholder: "PrÃ©nom" %>
   </div>
   <div class="field">
     <%= f.input :last_name,
          input_html: { class: "field-input" },
          label: false,
          autofocus: true,
          required: true,
          placeholder: "Nom" %>
   </div>
   <div class="field">
     <%= f.input :email,
          input_html: { class: "field-input" },
          autofocus: true,
          label: false,
          required: true,
          autocomplete: "email",
          placeholder: "Adresse e-mail" %>
   </div>

   <div class="field">
     <%= f.input :password,
          input_html: { class: "field-input" },
          label: false,
          required: true,
          autocomplete: "new-password",
          placeholder: "Mot de passe (6 caractÃ¨res minimum)" %>
   </div>

   <div class="btn-container">
     <%= f.submit "C'est parti!", class:"btn-sign" %>
   </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

