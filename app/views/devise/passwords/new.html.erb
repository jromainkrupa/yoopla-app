<div class="container">
  <div class="inline-header">
    <%= link_to root_path do %>
      <i id="previous-chevron" class="fas fa-chevron-left"></i>
    <% end %>
    <h2>Ravis de vous revoir</h1>
  </div>

  <div id="sign_in_form">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.input :email,
             input_html: { class: "field-input" },
             autofocus: true,
             label: false,
             required: true,
             autocomplete: "email",
             placeholder: "Adresse e-mail" %>
      </div>

      <div class="btn-container">
        <%= f.submit "Envoyer", class:"btn-large btn-green" %>
      </div>
      <div class="conditions">
        <p>Nous vous enverrons un lien sur votre email pour rÃ©initialiser votre mot de passe</p>
      </div>
    <% end %>
  </div>
</div>
