<div class="m-4">
  <div class="flex items-center">
    <%= link_to root_path do %>
    <svg class="w-6 h-6 text-gray-800"xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /> </svg>
    <% end %>
    <h2 class="text-xl m-auto font-medium text-gray-600">Ravis de vous revoir</h1>
  </div>

  <div id="sign_in_form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.input :email,
             input_html: { class: "field-input" },
             autofocus: true,
             label: false,
             required: true,
             autocomplete: "email",
             placeholder: "Adresse e-mail" %>
      </div>

      <div class="field">
        <%= f.input :password,
             input_html: { class: "field-input" },
             label: false,
             required: true,
             autocomplete: "new-password",
             placeholder: "Mot de passe (6 caractères minimum)" %>
      </div>
      <div class="fogotten-password">
        <%= link_to "Vous avez oublié votre mot de passe ?", new_password_path(resource_name) %>
      </div>

      <div class="btn-container">
        <%= f.submit "Se connecter", class:"btn-large btn-green" %>
      </div>
    <% end %>
  </div>

  <div id="or">
    <p>OU</p>
  </div>

  <div class="btn-container">
    <%= link_to "Se connecter avec Facebook", root_path, class:"btn-fb-blue-in" %>
  </div>

</div>
