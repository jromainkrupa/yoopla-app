<div class="m-4">
  <div class="flex items-center">
    <%= link_to root_path do %>
    <svg class="w-6 h-6 text-gray-800"xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /> </svg>
    <% end %>
    <h2 class="text-xl m-auto font-medium text-gray-600">Ravis de vous revoir</h2>
  </div>

  <div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-8 mt-10 w-full">
        <%= f.input :email,
             input_html: { class: "field-input w-full text-base font-normal pb-4" },
             autofocus: true,
             label: false,
             required: true,
             autocomplete: "email",
             placeholder: "Adresse e-mail" %>
      </div>

      <div class="mb-8 w-full">
        <%= f.input :password,
             input_html: { class: "field-input w-full text-base font-normal pb-4" },
             label: false,
             required: true,
             autocomplete: "new-password",
             placeholder: "Mot de passe (6 caractères minimum)" %>
      </div>
      <div class="text-sm font-light mt-10 text-gray-600">
        <%= link_to "Vous avez oublié votre mot de passe ?", new_password_path(resource_name) %>
      </div>

      <div class="mt-8 text-center">
        <%= f.submit "Se connecter", class:"text-white font-normal text-base no-underline bg-green-300 px-28 py-4 rounded-3xl" %>
      </div>
    <% end %>
  </div>

  <div class="text-center text-base mt-2">
    <p>OU</p>
  </div>

  <div class="text-center mt-6">
    <%= link_to "Se connecter avec Facebook", root_path, class:"text-white font-normal text-base no-underline fb-color px-14 py-4 rounded-3xl" %>
  </div>

</div>
